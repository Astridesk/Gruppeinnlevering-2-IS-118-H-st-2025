Navn = "Erling"

print("=== Konflikthåndtering: Sivert og Silje ===")
print("\nErling står overfor en konflikt mellom Sivert og Silje.")
print("Han må ta en beslutning for å løse situasjonen.")

# Første valg
print("\nHva skal Erling gjøre?")
print("1: Gå til HR for å få en nøytral mekler.")
print("2: Ta en individuell samtale med begge to.")

valg = input("\nSkriv 1 eller 2: ")

if valg == "1":
    print("\nDu valgte: Erling går til HR for å få en nøytral mekler.")
    scenario = input("Vil du se 'positiv' eller 'negativ' scenario? ").lower()
    if scenario == "positiv":
        print("\nScenario: Silje og Sivert kom til enighet og samarbeider bedre.")
    elif scenario == "negativ":
        print("\nScenario: Det er fortsatt dårlig stemning etter kompromisset.")
    else:
        print("Ugyldig valg.")

elif valg == "2":
    print("\nDu valgte: Erling tar en individuell samtale med begge to.")
    scenario = input("Vil du se 'positiv' eller 'negativ' scenario? ").lower()
    if scenario == "positiv":
        print("\nScenario: Etter samtalen finner de en løsning sammen.")
    elif scenario == "negativ":
        print("\nScenario: Tilliten til Erling svekkes, og konflikten blir ikke løst.")
    else:
        print("Ugyldig valg.")

# Neste steg i storyline
print("\nErling må nå bestemme hva han gjør videre:")
print("1: Følge opp med et teammøte.")
print("2: La situasjonen ligge og håpe det går over.")

valg2 = input("\nSkriv 1 eller 2: ")

if valg2 == "1":
    print("\nErling holder et teammøte for å styrke samarbeidet.")
    print("Historien ender med at teamet jobber bedre sammen.")
elif valg2 == "2":
    print("\nErling lar situasjonen ligge. Konflikten blusser opp igjen senere.")
    print("Historien ender med nye utfordringer.")
else:
    print("Ugyldig valg.")
